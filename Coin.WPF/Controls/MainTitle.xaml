<UserControl x:Class="Coin.WPF.Controls.MainTitle"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:language="clr-namespace:Coin.WPF.Language"
             mc:Ignorable="d">
    <Grid>
        <TextBlock Text="{x:Static language:Language.mainTitle}"  Style="{DynamicResource MainTitle}" FontFamily="{StaticResource RubikRegular}"/>
    </Grid>
</UserControl>
