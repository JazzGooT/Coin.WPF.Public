<ResourceDictionary xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
                    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml">
    <!--A Style that affects all Buttons-->
    <Style TargetType="Button">
        <Setter Property="FontFamily" Value="{DynamicResource RubikRegular}"/>
        <Setter Property="Background" Value="{DynamicResource BrushBackGroundButtonColor}" />
        <Setter Property="Foreground" Value="{DynamicResource BrushTextColor}" />
        <Setter Property="Cursor" Value="Hand" />
    </Style>
    <!--ThemeButton-->
    <Style BasedOn="{StaticResource {x:Type Button}}" TargetType="Button" x:Key="ThemeButton">
        <Setter Property="Width" Value="40" />
        <Setter Property="Height" Value="20" />
        <Setter Property="FontSize" Value="12" />
    </Style>
    <!--LanguageButton-->
    <Style BasedOn="{StaticResource {x:Type Button}}" TargetType="Button" x:Key="LanguageButton">
        <Setter Property="Width" Value="27" />
        <Setter Property="Height" Value="20" />
        <Setter Property="FontSize" Value="12" />
    </Style>
    <!--DetailsButton-->
    <Style BasedOn="{StaticResource {x:Type Button}}" TargetType="Button" x:Key="DetailsButton">
        <Setter Property="Width" Value="80" />
        <Setter Property="Height" Value="20" />
        <Setter Property="FontSize" Value="12" />
    </Style>
</ResourceDictionary>