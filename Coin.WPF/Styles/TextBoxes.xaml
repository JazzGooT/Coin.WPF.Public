<ResourceDictionary xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
                    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml">
    <!--TextBox-->
    <Style TargetType="TextBox">
        <Setter Property="VerticalAlignment" Value="Center" />
        <Setter Property="FontFamily" Value="{DynamicResource RubikRegular}" />
    </Style>
    <!--HeaderSearchTextBox-->
    <Style BasedOn="{StaticResource {x:Type TextBox}}" TargetType="TextBox" x:Key="HeaderSearchTextBox">
        <Setter Property="Width" Value="140" />
        <Setter Property="Height" Value="26" />
        <Setter Property="FontSize" Value="12" />
        <Setter Property="Foreground" Value="{DynamicResource BrushNonActiveTextColor}" />
        <Setter Property="Background" Value="{DynamicResource BrushBackGroundButtonColor}" />
        <Setter Property="VerticalContentAlignment" Value="Center" />
    </Style>
</ResourceDictionary>